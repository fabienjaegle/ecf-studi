{% extends 'admin.html.twig' %}

{% block body %}
	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h2>Liste des franchises</h2>
		<div class="btn-toolbar mb-2 mb-md-0">
			<div class="btn-group me-2">
				<a href="{{ path('app_dashboard_admin_new_franchise') }}" class="btn btn-outline-primary">Nouvelle franchise</a>
			</div>
		</div>
	</div>
	<div class="table-responsive">
		<table class="table table-striped table-sm">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Nom</th>
					<th scope="col">Email</th>
					<th scope="col">Est actif ?</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for franchise in franchises %}
					<tr>
						<td>{{ franchise.id }}</td>
						<td>{{ franchise.name }}</td>
						<td>{{ franchise.email }}</td>
						<td>{{ franchise.active ? 'Oui' : 'Non' }}</td>
						<td>
							<a href="#">DÃ©tail</a>
							<a href="#">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td class="text-center" colspan="5">Aucune franchise</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
