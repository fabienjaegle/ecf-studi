{% extends 'admin.html.twig' %}

{% block body %}
	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h2>Détails de la franchise :
			{{ franchise.name }}</h2>
		<div class="btn-toolbar mb-2 mb-md-0">
			<div class="d-flex">
				<a href="{{ path('app_dashboard_admin_franchise_index') }}" class="btn btn-outline-success">Retour à la liste</a>
				<a href="{{ path('app_dashboard_admin_edit_franchise', {'id': franchise.id}) }}" class="btn btn-outline-primary">Modifier</a>
				{{ include('franchise/_delete_form.html.twig') }}
			</div>
		</div>
	</div>

	<div class="m-5">
		<table class="table table-hover table-striped">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ franchise.id }}</td>
				</tr>
				<tr>
					<th>Nom de la franchise</th>
					<td>{{ franchise.name }}</td>
				</tr>
				<tr>
					<th>Adresse mail</th>
					<td>{{ franchise.email }}</td>
				</tr>
				<tr>
					<th>Est actif ?</th>
					<td>{{ franchise.active ? 'Oui' : 'Non' }}</td>
				</tr>
			</tbody>
		</table>
	</div>
{% endblock %}
