{{ form_start(form) }}
<div class="row g-3">
	<div class="col-12">
		{{ form_label(form.name, 'Nom de la franchise', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.name) }}

		<div class="invalid-feedback">
			{{ form_errors(form.name) }}
		</div>
	</div>
	<div class="col-12">
		{{ form_label(form.email, 'Adresse mail', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.email) }}

		<div class="invalid-feedback">
			{{ form_errors(form.email) }}
		</div>
	</div>
	<div class="col-12">
		{{ form_label(form.is_active, 'Est actif ?', {'label_attr': {'class': 'form-label'}}) }}
		{{ form_widget(form.is_active) }}

		<div class="invalid-feedback">
			{{ form_errors(form.is_active) }}
		</div>
	</div>

	<button class="btn btn-outline-primary ml-5 mt-2">{{ button_label|default('Cr√©er') }}</button>
</div>
{{ form_end(form) }}
