{% extends 'admin.html.twig' %}

{% block body %}
	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h2>Liste des structures</h2>
		<div class="btn-toolbar mb-2 mb-md-0">
			<div class="btn-group me-2">
				<a href="{{ path('app_dashboard_new_structure') }}" class="btn btn-outline-primary">Nouvelle structure</a>
			</div>
		</div>
	</div>
	<div class="table-responsive">
		<table class="table table-striped table-sm">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Nom</th>
					<th scope="col">Adresse</th>
					<th scope="col">Code postal</th>
					<th scope="col">Ville</th>
					<th scope="col">Email</th>
					<th scope="col">Est actif ?</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for structure in structures %}
					<tr>
						<td>{{ structure.id }}</td>
						<td>{{ structure.name }}</td>
						<td>{{ structure.address }}</td>
						<td>{{ structure.zipcode }}</td>
						<td>{{ structure.city }}</td>
						<td>{{ structure.email }}</td>
						<td>{{ structure.active ? 'Oui' : 'Non' }}</td>
						<td>
							<a href="{{ path('app_dashboard_structure_details', {'id': structure.id}) }}">DÃ©tails</a>
							<a href="{{ path('app_dashboard_edit_structure', {'id': structure.id}) }}">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td class="text-center" colspan="8">Aucune structure</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
